{
	"compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "jsx": "react",
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": ["./src/**/*", "stories/**/*", "./typings/**/*", "./*.js", "./__tests__/**/*"],
}
